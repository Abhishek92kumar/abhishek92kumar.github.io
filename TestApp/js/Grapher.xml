<?xml version="1.0" encoding="ISO-8859-1"?>


<splitpane name="split" divider="220" weightx="1" weighty="1">
    <panel scrollable="true" bottom="2" columns="1" gap="4" left="3" top="3" weightx="1" weighty="1" >
        <panel columns="4" gap="3" >
            <button name="btn_pause" tooltip="Play/pause graph" action="button_clicked(this)"/>
            <button name="btn_reset" tooltip="Reset graph and begin time from 0" action="button_clicked(this)"/>
			<button name="btn_export" tooltip="Export data to csv" action="button_clicked(this)"/>
        </panel>
        <label font="default-small" name="lbl_obj1" text="Range:"></label>
        <combobox name="cmb_firstparam" action="combo_changed(this,this.selected)" width="100" end="7" editable="false" selected="3" start="7" text="Momentum" weightx="1" tooltip="Select parameters for range axes">
        </combobox>
        <label font="default-small" name="lbl_obj2" text="Domain:"></label>
        <combobox  name="cmb_secondparam" action="combo_changed(this,this.selected)" editable="false" text="Y axis; Speed" font="Serif 16" weightx="1" tooltip="Select parameter to be used as domain axis">   
		</combobox>
    
        <panel name="pnl_legends" columns="1" top="5" bottom="3" gap="3">
           
        </panel>
       
        <label font="default-small" name="lbl_interval" text="Polling Interval: 1"/>
		<slider minimum="1" maximum="100" value="1" action="slider_changed(this,this.value)" tooltip="Frames after which data will be fed to the grapher" name="sld_interval" unit="1" block="5"/>
   		<label font="default-small" name="lbl_span" text="Time Span: [10.0 sec]"/>      
		<slider minimum="0.5" maximum="20" value="6" action="slider_changed(this,this.value)" tooltip="Time interval for which data will be recorded and displayed" name="sld_span" unit="0.5" block="1"/>
        <panel columns="1" top="5" gap="3">
           	<checkbox  name="chk_info"    selected="true" text="Show Values"  action="checkbox_clicked(this,this.selected)"  tooltip="Check to display axis informations" />
            <checkbox name="chk_grids"   selected="true" text="Show Grids"   action="checkbox_clicked(this,this.selected)" tooltip="Check to display grids on graph" />
            <checkbox  name="chk_legends" selected="true" text="Show Legends" action="checkbox_clicked(this,this.selected)" tooltip="Check to display Legend information on graph"/>
            <checkbox  name="chk_continuous" selected="true" text="Continuous Input" action="checkbox_clicked(this,this.selected)" tooltip="If checked graph is continuously updated, else polling stops after defined Interval"/>
            <checkbox  name="chk_stacked" selected="false" text="Stacked" action="checkbox_clicked(this,this.selected)" tooltip="If checked multiple graphs are stacked over one another"/>
        </panel>
    </panel>
<bean name="pnlGraph" bean="org.shikhar.simphy.gui.Grapher$Plotter" weightx="1" weighty="1" />
</splitpane>
